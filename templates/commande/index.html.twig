{% extends 'base.html.twig' %}

{% block title %}Formulaire de commande
{% endblock %}

{% block body %}

 <div class="w-50 card p-5 rounded mx-auto my-4 shadow-lg">
		<h1 class="my-4 text-center">Reservation</h1>

		{{ form_start(form) }}
    <div class="row">
        <div class="col-6">
		{{ form_row(form.dateArrivee) }}
        </div>
        <div class="col-6">
		{{ form_row(form.dateDepart) }}
        </div>
        <div class="col-12">
		{{ form_row(form.chambre) }}
        </div>
        <div class="col-12">
		{{ form_row(form.nom) }}
        </div>
        <div class="col-12">
		{{ form_row(form.prenom) }}
        </div>  
        <div class="col-12">
		{{ form_row(form.email) }}
        </div>
        
        <div class="col-12">
		{{ form_row(form.telephone) }}
        </div>
       
        
		<div class="form-group">
			<button type="submit" class="btn btn-primary my-4">Reservez</button>
		</div>
		{{ form_end(form) }}    </div>

    {# {{ form_end(registrationForm) }}
    <p class="text-end mt-3">déjà inscrit? <a href="{{ path('app_register') }}">connectez-vous</a></p> #}
   
    </div>
</div>

{% endblock %}
