{% extends 'base.html.twig' %}

{% block title %}Nos chambres
{% endblock %}

{% block body %}

	<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
		<div class="carousel-inner">
			{% for slider in sliders %}

				<div class="carousel-item {% if slider.ordre == 1 %} active {% endif %}">

					<img src="{{ asset("/upload/" ~ slider.image) }}" class="d-block w-100" alt="...">
					<div class="container">
						<h1 class="my-4 text-center">Nos chambres</h1>
						<p class="text-center fw-bold">"Nos chambres d'hôtel vous offrent un confort moderne et une élégance raffinée. Choisissez entre nos chambres standard, suites de luxe ou chambres familiales pour un séjour mémorable."</p>
					</div>


				</div>
			{% endfor %}
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>

		{# <h1 class="my-4 text-center">Nos chambres</h1> #}
		<div class="container">
			<div class="mt-4 row gx-3">
				{% for chambre in chambres %}

					<div class="col-md-3 container">
						<div class="card border-primary mb-3 rounded shadow-lg my-4" style="max-width: 20rem;">
							<div class="card-header"><img src="{{ asset("/upload/" ~ chambre.image) }}" alt="" class="img-fluid"></div>
							<div class="card-body">
								<h4 class="card-title">{{chambre.titre}}</h4>
								<p class="card-text">{{ chambre.descriptionLongue|slice(0, 100) }}...
									<a class="" href="{{path('chambre_details', {id: chambre.id})}}">voir plus</a>
								</p>
								<p class="card-text fw-bold">{{ chambre.prixJournalier }}
									€/jour</p>
								<a href="{{path('chambre_details', {id: chambre.id})}}" class="btn btn-primary">Reservez</a>
								{# <a href="{{path('app_commande')}}" class="btn btn-primary">Reservez</a> #}
								{# <a href="{{path('orders_add')}}" class="btn btn-success">commander</a> #}
							</div>
						</div>
					</div>

				{% endfor %}

			</div>
		</div>


	{% endblock %}
